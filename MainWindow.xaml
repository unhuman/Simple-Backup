<Window x:Class="Simple_Backup.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Simple_Backup"
        mc:Ignorable="d"
    Title="Simple Backup" Height="400" Width="700"
        Background="{DynamicResource BackgroundBrush}"
        Foreground="{DynamicResource TextBrush}">
    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Stretch">
         <!-- Title -->
        <TextBlock Text="Simple Backup Tool" FontSize="28" FontWeight="Bold" 
       Foreground="{DynamicResource TextBrush}" Margin="0,0,0,30" HorizontalAlignment="Center"/>
    
            <!-- Backup Directory Section -->
            <StackPanel Margin="0,0,0,20">
      <Label Content="Backup Directory:" Margin="0,0,0,8"/>
           <Grid>
          <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="Auto"/>
         </Grid.ColumnDefinitions>
      <TextBox x:Name="BackupDirectoryTextBox" Grid.Column="0" 
         IsReadOnly="True" Margin="0,0,8,0"/>
     <Button x:Name="BackupBrowseButton" Grid.Column="1" Content="..." Width="40" 
       Click="BackupBrowseButton_Click"/>
         </Grid>
      </StackPanel>
          
         <!-- Restore Directory Section -->
     <StackPanel Margin="0,0,0,30">
      <Label Content="Restore Directory:" Margin="0,0,0,8"/>
          <Grid>
   <Grid.ColumnDefinitions>
           <ColumnDefinition Width="*"/>
           <ColumnDefinition Width="Auto"/>
                 </Grid.ColumnDefinitions>
    <TextBox x:Name="RestoreDirectoryTextBox" Grid.Column="0" 
    IsReadOnly="True" Margin="0,0,8,0"/>
       <Button x:Name="RestoreBrowseButton" Grid.Column="1" Content="..." Width="40"
  Click="RestoreBrowseButton_Click"/>
            </Grid>
            </StackPanel>
   
         <!-- Action Buttons -->
   <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
        <Button x:Name="BackupButton" Content="Backup" Width="120" Margin="0,0,10,0" 
      Click="BackupButton_Click"/>
    <Button x:Name="ExitButton" Content="Exit" Width="120" 
    Click="ExitButton_Click"/>
            </StackPanel>
      </StackPanel>
    </Grid>
</Window>
