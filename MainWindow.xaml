<Window x:Class="Simple_Backup.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:Simple_Backup"
      mc:Ignorable="d"
        Title="Simple Backup" Height="420" Width="700"
    Background="{DynamicResource BackgroundBrush}"
        Foreground="{DynamicResource TextBrush}">
    <Grid Margin="20">
        <DockPanel VerticalAlignment="Stretch">
    <!-- Title -->
         <TextBlock DockPanel.Dock="Top" Text="Simple Backup Tool" FontSize="28" FontWeight="Bold" 
        Foreground="{DynamicResource TextBrush}" Margin="0,0,0,20" HorizontalAlignment="Center"/>
    
     <!-- Backup Directory Section -->
      <StackPanel DockPanel.Dock="Top" Margin="0,0,0,15">
    <Label Content="Source Directory:" Margin="0,0,0,8"/>
    <Grid>
     <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*"/>
       <ColumnDefinition Width="Auto"/>
 </Grid.ColumnDefinitions>
  <TextBox x:Name="BackupDirectoryTextBox" Grid.Column="0" 
  IsReadOnly="True" Margin="0,0,8,0"/>
        <Button x:Name="BackupBrowseButton" Grid.Column="1" Content="..." Width="40" 
         Click="BackupBrowseButton_Click"/>
                </Grid>
    </StackPanel>

            <!-- Restore Directory Section -->
            <StackPanel DockPanel.Dock="Top" Margin="0,0,0,15">
     <Label Content="Destination Directory:" Margin="0,0,0,8"/>
            <Grid>
     <Grid.ColumnDefinitions>
          <ColumnDefinition Width="*"/>
  <ColumnDefinition Width="Auto"/>
           </Grid.ColumnDefinitions>
           <TextBox x:Name="RestoreDirectoryTextBox" Grid.Column="0" 
            IsReadOnly="True" Margin="0,0,8,0"/>
   <Button x:Name="RestoreBrowseButton" Grid.Column="1" Content="..." Width="40"
         Click="RestoreBrowseButton_Click"/>
        </Grid>
            </StackPanel>
   
            <!-- Eject Drive Option -->
   <StackPanel DockPanel.Dock="Top" Margin="0,0,0,15">
   <CheckBox x:Name="EjectDriveCheckBox" Content="Eject disk if removable after backup" 
         Foreground="{DynamicResource TextBrush}" IsEnabled="True"/>
         </StackPanel>
           
            <!-- Action Buttons -->
    <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right">
        <Button x:Name="BackupButton" Content="Backup" Width="100" Height="35" Margin="0,0,10,0" 
   Click="BackupButton_Click"/>
    <Button x:Name="ExitButton" Content="Exit" Width="100" Height="35" 
          Click="ExitButton_Click"/>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
